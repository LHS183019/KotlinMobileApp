<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calcText"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:backgroundTint="@color/light_grey"
        android:padding="10dp"
        android:gravity="bottom|end"
        android:textSize="48sp"
        android:text=""
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnANS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="on_Answer_click"
            android:layout_marginHorizontal="4dp"
            android:text="ans"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnCLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_CLR_click"
            android:layout_marginHorizontal="4dp"
            android:text="C"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnBac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_backspace_click"
            android:layout_marginHorizontal="4dp"
            android:text="←"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="1"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="2"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="3"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_op_click"
            android:layout_marginHorizontal="4dp"
            android:text="/"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="4"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="5"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="6"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_op_click"
            android:layout_marginHorizontal="4dp"
            android:text="*"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="7"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="8"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="9"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnPlu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_op_click"
            android:layout_marginHorizontal="4dp"
            android:text="+"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btnPoN"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_PN_click"
            android:layout_marginHorizontal="4dp"
            android:text="+/-"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_number_click"
            android:layout_marginHorizontal="4dp"
            android:text="0"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_dot_click"
            android:layout_marginHorizontal="4dp"
            android:text="."
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnMin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_op_click"
            android:layout_marginHorizontal="4dp"
            android:text="-"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btnEqu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="on_equal_click"
            android:layout_marginHorizontal="4dp"
            android:text="="
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>